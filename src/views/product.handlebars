<div id="app">
    <h1 id="productId">Details of the product with the identification
        {{product._id}}</h1>
    <div id="productDetail" >
        <div id="product-{{product._id}}">
            <div>
                {{#each product.thumbnails}}
                <img src="{{this}}" alt="product image" />
                {{/each}}
            </div>
            <div>
                <h5 id="title">{{product.title}}</h5>
                <p>Description:
                    {{product.description}}</p>
                <p>Category:
                    {{product.category}}</p>
                <p>Stock:
                    {{product.stock}}</p>
                <p>Product code:
                    {{product.code}}</p>

                    <div>
                        <p>${{product.price}}</p>
                        <button id="botonForm">Add to the cart</button>
                    </div>
           
            </div>
        </div>
    </div>
</div>
